<div class="city-detail card blue-grey white-text">
  <div class="card-content">
    <h1><%= @city.name %></h1>

    <div id="update-city-form" class="hidden">
      <h5>Update Details</h5>
      <form action="/cities/<%= @city.id %>" method="post">
        <input name="_method" type="hidden" value="patch">
        <label for="city-name">City Name</label>
        <input type="text" id="city-name" name="city-name">
        <button type="submit" class="btn btn-success purple right">Update City</button>
      </form>
      <form action="/cities/<%= @city.id %>" method="post">
        <input name="_method" type="hidden" value="delete">
        <button type="submit" class="btn btn-success red">Delete City</button>
      </form>
    </div>
    <button class="btn blue" onclick="toggleCityForm()" id="edit-city-button">Edit City</button>
    <button class="btn blue hidden purple" onclick="toggleCityForm()" id="hide-city-form-button">Hide Form</button>
  </div>


</div>

<a href="/cities" class="btn purple">Back to Cities</a>
