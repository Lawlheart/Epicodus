<div class="train-detail card blue-grey white-text">
  <div class="card-content">
    <h1><%= @train.name %></h1>

    <div id="update-train-form" class="hidden">
      <h5>Update Details</h5>
      <form action="/trains/<%= @train.id %>" method="post">
        <input name="_method" type="hidden" value="patch">
        <label for="train-name">Train Name</label>
        <input type="text" id="train-name" name="train-name">
        <button type="submit" class="btn btn-success purple right">Update Train</button>
      </form>
      <form action="/trains/<%= @train.id %>" method="post">
        <input name="_method" type="hidden" value="delete">
        <button type="submit" class="btn btn-success red">Delete Train</button>
      </form>
    </div>
    <button class="btn blue" onclick="toggleTrainForm()" id="edit-train-button">Edit Train</button>
    <button class="btn blue hidden purple" onclick="toggleTrainForm()" id="hide-train-form-button">Hide Form</button>
  </div>


</div>

<a href="/trains" class="btn purple">Back to Trains</a>
