<div class="card blue-grey white-text main-card">
  <div class="card-content">
    <h3>Client: <%= @client.name %></h3>

    <button class="btn blue right edit-mode" onclick="editMode()">Edit</button>
    <button class="btn blue right edit-mode hidden" onclick="editMode()">Close Edit Mode</button>
  </div>
</div>

<div class="card blue-grey lighten-1 edit-mode hidden white-text">
  <div class="card-content row">
    <div>
      <h5>Edit Client</h5>
      <form action="/clients/<%= @client.id %>" method="post">
        <input name="_method" type="hidden" value="patch">
        <label for="new-client-name">Client Name</label>
        <input type="text" name="new-client-name" id="new-client-name">
        <button class="purple btn" type="submit">Update Client</button>
      </form>
    </div>
  </div>
  <form action="/clients/<%= @client.id %>" method="post" class="right">
    <input name="_method" type="hidden" value="delete">
    <button class="btn red right" type="submit">Delete Client</button>
  </form>
</div>
<a href="/clients" class="blue btn">Back to Clients</a>
<a href="/stylists" class="purple btn">Show Stylists</a>

