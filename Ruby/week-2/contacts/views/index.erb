<div class="contacts">
  <h2 class="blue-grey-text text-darken-3 center-align">Contact List</h2>
  <% if @contact_list %>
    <% @contact_list.each do |contact| %>
      <div class="card blue-grey">
        <div class="card-content white-text">
          <span class="card-title"><%= contact.first_name %> <%= contact.last_name %></span>
          <p><%= contact.job ? "#{contact.job}" : "" %><% contact.job and contact.company ? " at " : "" %><% contact.company ? contact.company : "" %></p>
        </div>
        <div class="fixed-action-btn horizontal">
          <a class="btn-floating green small"><i class="material-icons">add</i></a>
          <ul>
            <li><a class="btn-floating deep-purple"><i class="material-icons">phone</i></a></li>
            <li><a class="btn-floating indigo"><i class="material-icons">email</i></a></li>
            <li><a class="btn-floating blue"><i class="material-icons">location_on</i></a></li>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
  <button id="new-contact-button" class="btn" onclick="toggleContactForm()">Add Contact</button>
</div>



<div id="new-contact-form" class="new-contact card blue-grey darken-2 white-text hidden">
  <div class="card-content">
    <span class="card-title">Create New Contact</span>
    <form action="contact/new" method="post" class="">
      <div class="row">
        <div class="form-group col s6">
          <label for="first-name">First Name</label>
          <input type="text" class="form-control" id="first-name" name="first-name">
        </div>
        <div class="form-group col s6">
          <label for="last-name">Last Name</label>
          <input type="text" class="form-control" id="last-name" name="last-name">
        </div>
        <div class="form-group col s6">
          <label for="job">Job Title</label>
          <input type="text" class="form-control" id="job" name="job">
        </div>
        <div class="form-group col s6">
          <label for="company">Company</label>
          <input type="text" class="company" id="company" name="company">
        </div>
      </div>
      <button class="btn waves-effect" type="submit">Create Contact</button>
    </form>
  </div>
</div>
