<form action='/report_confirmation'>
  <h1>Report Form</h1>
  <div class="form-group">
    <label for="sighted">Phantom Sighted</label>
    <input id="sighted" name="sighted" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="description">Sighting Description</label>
    <input id="description" name="description" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="date">Date</label>
    <input id="date" name="date" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-danger"><span>Report</span></button>
</form>