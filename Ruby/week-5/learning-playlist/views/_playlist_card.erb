<div class='card-container playlist-card col m6 l4 s12'>
  <div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" id='random' src="/img/random/<%= Random.new.rand(9) %>.jpg">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%=  playlist.name %><i class="material-icons right">more_vert</i></span>
      <p><a href="/playlists/<%=  playlist.id()%>">Playlist Details</a></p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
      <h6>Description </h6>
      <p><%= playlist.description %></p>
      <h5>Due Date</h5>
      <h6><%= playlist.due_date %></h6>
    </div>
  </div>
</div>
