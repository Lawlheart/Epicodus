<button class="btn blue-grey add-mode " onclick="addMode()">Add playlist</button>

<div class="card blue-grey darken-3 white-text add-mode hidden">
  <div class="card-content row">
    <form class="col s12" action='/playlists' method="post">
      <span class="card-title">Create A Playlist</span>
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="Enter Playlist Name" id="playlist_name" name='playlist_name' type="text" class="validate">
          <label for="playlist_name">Playlist Name</label>
        </div>
      </div>
      <div class="row" >
        <div class="input-field col s12">
          <input placeholder="Enter a brief description of the playlist" id="playlist_description" name='playlist_description' type="text" class="validate">
          <label for="playlist_description">Playlist Description</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input type="date" class="datepicker" name="due_date" placeholder="Click to Enter Due Date">
        </div>
      </div>
      <div class='row'>
        <div class="input-field col s6">
          <input type="checkbox" id="private" name ='private'>
          <label for="private">Private Lesson</label>
        </div>
      </div>
      <br>
      <div class="form-group">
        <label for="new-tags">Enter Tags (comma separated)</label>
        <input type="text" name="new-tags" id="new-tags">
      </div>
      <button type='submit' class='btn btn-success' onclick="addMode()" >Submit Playlist</button>
    </form>
  </div>
</div>
