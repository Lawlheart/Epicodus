<p id="notice"><%= notice %></p>

<h1>Games</h1>
<p>sort:
  <%= link_to 'Title', games_path(:sortby => :title)  %> |
  <%= link_to 'Release Date', games_path(:sortby => :release_date)  %> |
  <%= link_to 'Rating', games_path(:sortby => :rating)  %>
</p>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Platforms</th>
      <th>Rating</th>
      <th>Release date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><img src="<%= game.image %>" alt="" style="width:100px;"></td>
        <td><%= game.platforms %></td>
        <td><%= game.rating %></td>
        <td><%= game.release_date %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
