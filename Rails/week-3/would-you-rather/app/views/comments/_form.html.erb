<h5>New Comment: </h5>

<%= form_for [@choice, Comment.new], class: "new_comment_form", remote: true do |f| %>
  <div class = "form-group">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>

  <div class = "form-group">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <br>

  <%= f.submit %>
<% end %>
