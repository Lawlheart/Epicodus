<%= form_for message do |f| %>
  <div class="form-group">
    <%= f.label :to %>
    <%= f.text_field :to, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :from %>
    <%= f.text_field :from, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn' %>
<% end %>
