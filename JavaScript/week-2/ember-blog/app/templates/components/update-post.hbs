{{#if isUpdateFormShowing }}
  <div class="card indigo white-text">
    <div class="card-content">
      <span class="card-title">Update Post</span>
      <form id="new-post-form">
        <h4></h4>

        <div class="input-field">
          {{input value=title id="title" placeholder=post.title}}
          <label for="title" class="active">Title</label>
        </div>

        <div class="input-field">
          {{input value=author id="author" placeholder=post.author}}
          <label for="author" class="active">Author</label>
        </div>

        <div class="input-field">
          {{input value=date id="date" placeholder=post.date}}
          <label for="date" class="active">Date</label>
        </div>

        <div class="input-field">
          {{input value=body id="body" placeholder=post.body}}
          <label for="body" class="active">Body</label>
        </div>
        <button class="btn blue" {{action 'updatePost' post}}>Update Post</button>
      </form>
    </div>
  </div>
  <button class="btn blue update" {{action 'hideUpdateForm'}}>Hide Form</button>
{{else}}
  <button class="btn blue update" {{action 'showUpdateForm'}}>Update Post</button>
{{/if}}
<button class="btn red delete" {{action 'deletePost' post}}>Delete</button>

