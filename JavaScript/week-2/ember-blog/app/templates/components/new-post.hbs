{{#if displayNewPostForm}}
  <div class="card indigo white-text">
    <div class="card-content">
      <span class="card-title">New Post</span>
      <div class="form-container">
        <form id="new-post-form">

          <div class="input-field">
            {{input value=title id="title"}}
            <label for="title">Title</label>
          </div>

          <div class="input-field">
            {{input value=author id="author"}}
            <label for="author">Author</label>
          </div>

          <div class="input-field">
            {{input value=date id="date"}}
            <label for="date">Date</label>
          </div>

          <div class="input-field">
            {{input value=body id="body"}}
            <label for="body">Body</label>
          </div>

          <button class="btn blue" {{action 'savePost'}}>Save Post</button>
        </form>
      </div>
    </div>
  </div>
{{else}}
  <button class="btn indigo" {{action 'showNewPostForm'}}>New Post</button>
{{/if}}