{{#if newQuestionForm}}
  <div class="card indigo white-text">
    <div class="card-content">
      <span class="card-title">New Question</span>
      <form id="new-question-form">
        <div class="input-field">
          {{input value=content id="content"}}
          <label for="content">Question</label>
        </div>

        <div class="input-field">
          {{input value=author id="author"}}
          <label for="author">Author</label>
        </div>

        <div class="input-field">
          {{input value=notes id="notes"}}
          <label for="notes">Notes</label>
        </div>

        <button class="btn blue" {{action 'saveQuestion'}}>Save Question</button>
      </form>
    </div>
  </div>
{{else}}
  <button class="btn indigo" {{action 'showNewQuestionForm'}}>New Question</button>
{{/if}}