{{#if newAnswerForm}}
  <div class="card indigo white-text">
    <div class="card-content">
      <span class="card-title">New Answer</span>
      <form>

        <div class="input-field">
          {{input value=author id="author"}}
          <label for="author">Author</label>
        </div>

        <div class="input-field">
          {{input value=content id="content"}}
          <label for="content">Answer</label>
        </div>

        <button class="btn blue" {{action 'saveAnswer'}}>Save Answer</button>
      </form>
    </div>
  </div>
{{else}}
  <button class="btn indigo" {{action 'showNewAnswerForm'}}>New Answer</button>
{{/if}}